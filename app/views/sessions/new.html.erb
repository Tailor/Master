<% flash.each do |name, msg| %>
  <% msg.each do |mesage| %>
      <script>
          ohSnap(' <%= mesage %>', 'red');
      </script>
  <% end %>
<% end %>

<div class="" id="thinkSignIn">

    <section id="hero" class="login">
    	<div class="container">
        	<div class="row">
            	<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                	<div id="login">
                    		<div class="text-center">
                                <h1 class="loginHeader">Sign in</h1>
                            </div>
                            <hr>
                            <%= form_tag sessions_path, :class => "formsession ui fluid form" do %>

                       
                                <div class="form-group">
                                    <label>Email</label>
                                    <%= text_field_tag  :email, params[:email], :class => "form-control", :placeholder => "Email"%>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <%= password_field_tag :password , nil, :class => "form-control", :placeholder => "Password"%>
                                </div>
                                <p class="small">
                                    <%= link_to "Forgot your password?",  new_password_reset_path, :class => "" %>
                                </p>
                                <button type="Submit" class="btn_full">Sign in</button>
                                <%= link_to "Create New account", register_user_path, :class =>"btn_full_outline" %>
                            <% end %>
                        </div>
                </div>
            </div>
        </div>
    </section>

